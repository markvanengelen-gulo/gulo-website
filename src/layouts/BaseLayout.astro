---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Gulo AI - Advanced AI Solutions for Business" } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  <body>
    <header>
      <nav class="container">
        <a href={base} class="logo">Gulo AI</a>
        <ul class="nav-links">
          <li><a href={base}>Home</a></li>
          <li><a href={`${base}about`}>About</a></li>
          <li class="nav-dropdown">
            <a href={`${base}services`}>Services</a>
            <ul class="dropdown-menu">
              <li><a href={`${base}services#data-ai`}>Data & AI Project Services</a></li>
              <li><a href={`${base}services#cybersecurity`}>Cybersecurity Services</a></li>
              <li><a href={`${base}services#managed-it`}>Managed IT Services</a></li>
              <li><a href={`${base}services#architecture`}>Architecture Services</a></li>
            </ul>
          </li>
          <li><a href={`${base}blog`}>Blog</a></li>
          <li><a href={`${base}contact`}>Contact</a></li>
        </ul>
      </nav>
    </header>
    
    <main>
      <slot />
    </main>
    
    <footer>
      <div class="container">
        <div class="footer-content">
          <div class="footer-section">
            <h4>Gulo AI</h4>
            <p>Advanced AI Solutions for Modern Business</p>
          </div>
          <div class="footer-section">
            <h4>Quick Links</h4>
            <ul>
              <li><a href={base}>Home</a></li>
              <li><a href={`${base}about`}>About Us</a></li>
              <li><a href={`${base}services`}>Services</a></li>
              <li><a href={`${base}blog`}>Blog</a></li>
            </ul>
          </div>
          <div class="footer-section">
            <h4>Services</h4>
            <ul>
              <li><a href={`${base}services#ai-consulting`}>AI Consulting</a></li>
              <li><a href={`${base}services#machine-learning`}>Machine Learning</a></li>
              <li><a href={`${base}services#data-analytics`}>Data Analytics</a></li>
              <li><a href={`${base}services#automation`}>Automation Solutions</a></li>
            </ul>
          </div>
          <div class="footer-section">
            <h4>Contact</h4>
            <ul>
              <li><a href={`${base}contact`}>Get in Touch</a></li>
              <li><a href={`${base}contact#schedule-appointment`}>Schedule Appointment</a></li>
            </ul>
          </div>
        </div>
        <div class="footer-bottom">
          <p>&copy; 2026 Gulo AI All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
