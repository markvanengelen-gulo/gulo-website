---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Gulo AI - Advanced AI Solutions for Business" } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  <body>
    <header>
      <nav class="container">
        <a href={base} class="logo">Gulo AI</a>
        <ul class="nav-links">
          <li><a href={base}>Home</a></li>
          <li><a href={`${base}about`}>About</a></li>
          <li class="nav-dropdown" data-active="false" aria-haspopup="true" aria-expanded="false">
            <a href={`${base}services`}>Services</a>
            <ul class="dropdown-menu" role="menu">
              <li role="menuitem"><a href={`${base}services#data-ai`}>Data & AI Project Services</a></li>
              <li role="menuitem"><a href={`${base}services#cybersecurity`}>Cybersecurity Services</a></li>
              <li role="menuitem"><a href={`${base}services#managed-it`}>Managed IT Services</a></li>
              <li role="menuitem"><a href={`${base}services#architecture`}>Architecture Services</a></li>
            </ul>
          </li>
          <li><a href={`${base}blog`}>Blog</a></li>
          <li><a href={`${base}contact`}>Contact</a></li>
        </ul>
      </nav>
    </header>
    
    <main>
      <slot />
    </main>
    
    <footer>
      <div class="container">
        <div class="footer-content">
          <div class="footer-section">
            <h4>Gulo AI</h4>
            <p>Advanced AI Solutions for Modern Business</p>
          </div>
          <div class="footer-section">
            <h4>Quick Links</h4>
            <ul>
              <li><a href={base}>Home</a></li>
              <li><a href={`${base}about`}>About Us</a></li>
              <li><a href={`${base}services`}>Services</a></li>
              <li><a href={`${base}blog`}>Blog</a></li>
            </ul>
          </div>
          <div class="footer-section">
            <h4>Services</h4>
            <ul>
              <li><a href={`${base}services#data-ai`}>Data & AI Project Services</a></li>
              <li><a href={`${base}services#cybersecurity`}>Cybersecurity Services</a></li>
              <li><a href={`${base}services#managed-it`}>Managed IT Services</a></li>
              <li><a href={`${base}services#architecture`}>Architecture Services</a></li>
            </ul>
          </div>
          <div class="footer-section">
            <h4>Contact</h4>
            <ul>
              <li><a href={`${base}contact`}>Get in Touch</a></li>
              <li><a href={`${base}contact#schedule-appointment`}>Schedule Appointment</a></li>
            </ul>
          </div>
        </div>
        <div class="footer-bottom">
          <p>&copy; 2026 Gulo AI All rights reserved.</p>
        </div>
      </div>
    </footer>
    <script>
      /**
       * Dropdown menu toggle functionality for mobile devices
       * Toggles visibility of dropdown menu using data-active attribute
       */

      document.addEventListener('DOMContentLoaded', function() {
        // Only apply click toggle on mobile devices (max-width: 768px)
        const isMobile = () => window.innerWidth <= 768;
        
        const navDropdowns = document.querySelectorAll('.nav-dropdown');
        
        // Add toggle buttons for mobile accessibility
        navDropdowns.forEach(dropdown => {
          const link = dropdown.querySelector('a');
          
          if (link && link.parentElement) {
            // Create a toggle button for mobile (hidden visually, but helps with navigation)
            const toggleBtn = document.createElement('button');
            toggleBtn.setAttribute('aria-label', 'Toggle submenu');
            toggleBtn.textContent = 'â–¼';
            toggleBtn.style.cssText = 'display: none; margin-left: 0.5rem; background: none; border: none; font-size: 0.8rem; cursor: pointer;';
            
            // Show toggle button only on mobile
            const updateToggleVisibility = () => {
              toggleBtn.style.display = isMobile() ? 'inline-block' : 'none';
            };
            updateToggleVisibility();
            
            link.parentElement.insertBefore(toggleBtn, link.nextSibling);
            
            // Handle toggle button click
            const toggleDropdown = (e: Event) => {
              e.preventDefault();
              e.stopPropagation();
              
              const isActive = dropdown.getAttribute('data-active') === 'true';
              
              // Close all other dropdowns first
              navDropdowns.forEach(d => {
                if (d !== dropdown) {
                  d.setAttribute('data-active', 'false');
                  d.setAttribute('aria-expanded', 'false');
                }
              });
              
              // Toggle current dropdown
              const newState = !isActive;
              dropdown.setAttribute('data-active', String(newState));
              dropdown.setAttribute('aria-expanded', String(newState));
            };
            
            toggleBtn.addEventListener('click', toggleDropdown);
            
            // On mobile, clicking the link navigates; use toggle button to open menu
            // On desktop, let the link work normally
            link.addEventListener('click', function() {
              // Don't interfere with desktop behavior
              if (!isMobile()) {
                return;
              }
            });
            
            // Keyboard accessibility
            toggleBtn.addEventListener('keydown', function(e) {
              if (e.key === 'Enter' || e.key === ' ') {
                toggleDropdown(e);
              }
            });
            
            // Update toggle button visibility on resize
            let resizeTimer: number | undefined;
            window.addEventListener('resize', function() {
              clearTimeout(resizeTimer);
              resizeTimer = window.setTimeout(() => {
                updateToggleVisibility();
                if (!isMobile()) {
                  navDropdowns.forEach(d => {
                    d.setAttribute('data-active', 'false');
                    d.setAttribute('aria-expanded', 'false');
                  });
                }
              }, 150);
            });
          }
        });
        
        // Close dropdown when clicking outside
        document.addEventListener('click', function(e) {
          const target = e.target;
          if (isMobile() && target && target instanceof Element && !target.closest('.nav-dropdown')) {
            navDropdowns.forEach(dropdown => {
              dropdown.setAttribute('data-active', 'false');
              dropdown.setAttribute('aria-expanded', 'false');
            });
          }
        });
      });
    </script>
  </body>
</html>
