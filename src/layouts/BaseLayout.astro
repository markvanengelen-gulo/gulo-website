---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  keywords?: string;
  author?: string;
  publishDate?: string;
  image?: string;
  type?: 'website' | 'article';
}

const { 
  title, 
  description = "Gulo AI - Advanced AI Solutions for Business",
  keywords = "AI, artificial intelligence, machine learning, data analytics, business automation, Canadian AI solutions",
  author = "Gulo AI",
  publishDate,
  image = `${Astro.site}${import.meta.env.BASE_URL}og-image.png`,
  type = 'website'
} = Astro.props;

const base = import.meta.env.BASE_URL;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const currentYear = new Date().getFullYear();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={author} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:site_name" content="Gulo AI" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />
    
    {publishDate && <meta property="article:published_time" content={publishDate} />}
    {publishDate && <meta property="article:author" content={author} />}
    
    <!-- Structured Data -->
    <script is:inline type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": type === 'article' ? "Article" : "Organization",
      ...(type === 'article' ? {
        headline: title,
        description: description,
        author: {
          "@type": "Organization",
          name: author
        },
        publisher: {
          "@type": "Organization",
          name: "Gulo AI",
          logo: {
            "@type": "ImageObject",
            url: `${Astro.site}${base}logo.png`
          }
        },
        datePublished: publishDate,
        image: image
      } : {
        name: "Gulo AI",
        url: Astro.site,
        logo: `${Astro.site}${base}logo.png`,
        description: "Canadian Technology Solutions for Modern Business - Data & AI Project Services, Cybersecurity Services, Managed IT Services, Architecture Services",
        contactPoint: {
          "@type": "ContactPoint",
          contactType: "Customer Service",
          email: "info@gulo.ai"
        },
        sameAs: []
      })
    })} />
    
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  <body>
    <header>
      <nav class="container">
        <a href={base} class="logo">Gulo AI</a>
        <ul class="nav-links">
          <li><a href={base}>Home</a></li>
          <li><a href={`${base}about`}>About</a></li>
          <li class="nav-dropdown" data-active="false" aria-haspopup="true" aria-expanded="false">
            <a href={`${base}services`}>Services</a>
            <ul class="dropdown-menu" role="menu">
              <li role="menuitem"><a href={`${base}services#data-ai`}>Data & AI Project Services</a></li>
              <li role="menuitem"><a href={`${base}services#cybersecurity`}>Cybersecurity Services</a></li>
              <li role="menuitem"><a href={`${base}services#managed-it`}>Managed IT Services</a></li>
              <li role="menuitem"><a href={`${base}services#architecture`}>Architecture Services</a></li>
            </ul>
          </li>
          <li><a href={`${base}blog`}>Blog</a></li>
          <li><a href={`${base}contact`}>Contact</a></li>
        </ul>
      </nav>
    </header>
    
    <main>
      <slot />
    </main>
    
    <footer>
      <div class="container">
        <div class="footer-content">
          <div class="footer-section">
            <h4>Gulo AI</h4>
            <p>Canadian Technology Solutions for Modern Business</p>
          </div>
          <div class="footer-section">
            <h4>Quick Links</h4>
            <ul>
              <li><a href={base}>Home</a></li>
              <li><a href={`${base}about`}>About Us</a></li>
              <li><a href={`${base}services`}>Services</a></li>
              <li><a href={`${base}blog`}>Blog</a></li>
            </ul>
          </div>
          <div class="footer-section">
            <h4>Services</h4>
            <ul>
              <li><a href={`${base}services#data-ai`}>Data & AI Project Services</a></li>
              <li><a href={`${base}services#cybersecurity`}>Cybersecurity Services</a></li>
              <li><a href={`${base}services#managed-it`}>Managed IT Services</a></li>
              <li><a href={`${base}services#architecture`}>Architecture Services</a></li>
            </ul>
          </div>
          <div class="footer-section">
            <h4>Contact</h4>
            <ul>
              <li><a href={`${base}contact`}>Get in Touch</a></li>
              <li><a href={`${base}contact#schedule-appointment`}>Schedule Appointment</a></li>
            </ul>
          </div>
        </div>
        <div class="footer-bottom">
          <p>&copy; {currentYear} Gulo AI All rights reserved.</p>
        </div>
      </div>
    </footer>
    <script is:inline>
      /**
       * Dropdown menu toggle functionality for mobile devices
       * Toggles visibility of dropdown menu using data-active attribute
       */

      document.addEventListener('DOMContentLoaded', function() {
        // Mobile breakpoint constant
        var MOBILE_BREAKPOINT = 768;
        var RESIZE_DEBOUNCE_MS = 150; // Debounce delay to optimize resize performance
        
        // Only apply click toggle on mobile devices
        var isMobile = function() { return window.innerWidth <= MOBILE_BREAKPOINT; };
        
        var navDropdowns = document.querySelectorAll('.nav-dropdown');
        var toggleUpdateFns = [];
        
        // Add toggle buttons for mobile accessibility
        navDropdowns.forEach(function(dropdown) {
          var link = dropdown.querySelector('a');
          var menuName = link ? (link.textContent || '').trim() : 'menu';
          
          if (link && link.parentElement) {
            // Create a toggle button for mobile
            var toggleBtn = document.createElement('button');
            toggleBtn.setAttribute('type', 'button');
            toggleBtn.setAttribute('aria-label', 'Toggle ' + menuName + ' submenu');
            toggleBtn.className = 'mobile-dropdown-toggle';
            toggleBtn.textContent = 'â–¼';
            
            // Show toggle button only on mobile
            var updateToggleVisibility = function() {
              toggleBtn.style.display = isMobile() ? 'inline-block' : 'none';
            };
            updateToggleVisibility();
            toggleUpdateFns.push(updateToggleVisibility);
            
            link.parentElement.insertBefore(toggleBtn, link.nextSibling);
            
            // Handle toggle button click
            var toggleDropdown = function(e) {
              e.preventDefault();
              e.stopPropagation();
              
              var isActive = dropdown.getAttribute('data-active') === 'true';
              
              // Close all other dropdowns first
              navDropdowns.forEach(function(d) {
                if (d !== dropdown) {
                  d.setAttribute('data-active', 'false');
                  d.setAttribute('aria-expanded', 'false');
                }
              });
              
              // Toggle current dropdown
              var newState = !isActive;
              dropdown.setAttribute('data-active', String(newState));
              dropdown.setAttribute('aria-expanded', String(newState));
            };
            
            toggleBtn.addEventListener('click', toggleDropdown);
            
            // Keyboard accessibility
            toggleBtn.addEventListener('keydown', function(e) {
              if (e.key === 'Enter' || e.key === ' ') {
                toggleDropdown(e);
              }
            });
          }
        });
        
        // Single resize handler for all dropdowns
        var resizeTimer;
        window.addEventListener('resize', function() {
          clearTimeout(resizeTimer);
          resizeTimer = setTimeout(function() {
            // Update all toggle button visibilities
            toggleUpdateFns.forEach(function(fn) { fn(); });
            // Reset dropdown state when resizing to desktop
            if (!isMobile()) {
              navDropdowns.forEach(function(d) {
                d.setAttribute('data-active', 'false');
                d.setAttribute('aria-expanded', 'false');
              });
            }
          }, RESIZE_DEBOUNCE_MS);
        });
        
        // Close dropdown when clicking outside
        document.addEventListener('click', function(e) {
          var target = e.target;
          if (isMobile() && target && target instanceof Element && !target.closest('.nav-dropdown')) {
            navDropdowns.forEach(function(dropdown) {
              dropdown.setAttribute('data-active', 'false');
              dropdown.setAttribute('aria-expanded', 'false');
            });
          }
        });
      });
    </script>
  </body>
</html>
