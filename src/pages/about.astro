---
import BaseLayout from '../layouts/BaseLayout.astro';
const base = import.meta.env.BASE_URL;
---

<BaseLayout 
  title="About Gulo.ai - Canadian-built AI Solutions"
  description="Gulo.ai is a Canadian-owned and operated AI and technology company, delivering practical, secure solutions designed for Canadian organizations."
>
  <!-- Hero Section - Vision -->
  <section class="hero">
    <div class="container">
      <h1>About Gulo.ai</h1>
      <p class="hero-subtitle">Canadian-built AI that delivers real outcomes.</p>
    </div>
  </section>

  <!-- Mission Section -->
  <section>
    <div class="container">
      <div class="grid grid-2">
        <div>
          <h2>Our Mission</h2>
          <p>We turn AI ambition into execution — building practical, secure solutions designed for Canadian organizations.</p>
        </div>
        <div>
          <h2>About Gulo.ai</h2>
          <p>Gulo.ai is a Canadian-owned and operated AI and technology company, founded to help organizations move beyond experimentation and into real-world results. We build solutions in Canada, for Canada — with a deep understanding of local industries, regulations, and the realities organizations face when adopting new technology.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- What We Do Section -->
  <section class="bg-light">
    <div class="container">
      <h2 class="section-title">What We Do</h2>
      <p class="section-subtitle">We design, implement, and scale AI, cybersecurity, and cloud solutions that are outcome-driven, secure, and compliant with Canadian standards. From AI readiness and enablement to production-grade platforms and services, our work is grounded in practicality, accountability, and measurable value.</p>
    </div>
  </section>

  <!-- How We Work Section -->
  <section>
    <div class="container">
      <h2 class="section-title">How We Work</h2>
      
      <div class="grid grid-2">
        <div class="card">
          <h3>Canadian by Design</h3>
          <p>Built and operated in Canada, with a strong focus on data sovereignty, privacy, and trust.</p>
        </div>
        
        <div class="card">
          <h3>Outcome-Focused</h3>
          <p>We prioritize results over hype — solving real problems with fit-for-purpose technology.</p>
        </div>
        
        <div class="card">
          <h3>Practical Execution</h3>
          <p>Our solutions integrate into existing environments and workflows with minimal friction.</p>
        </div>
        
        <div class="card">
          <h3>Trusted Partnership</h3>
          <p>We work as an extension of our clients' teams, focused on long-term success.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Gulo.ai Section -->
  <section class="bg-light">
    <div class="container">
      <h2 class="section-title">Why Gulo.ai</h2>
      <p class="section-subtitle">In a market crowded with AI promises, Gulo.ai stands apart by delivering what matters. As a Canadian company, we bring local insight, technical depth, and a hands-on approach to helping organizations adopt AI confidently, securely, and effectively.</p>
    </div>
  </section>

  <!-- CTA Section -->
  <section style="background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%); color: white;">
    <div class="container text-center">
      <h2 style="color: white;">Let's Work Together</h2>
      <p style="color: rgba(255, 255, 255, 0.9); font-size: 1.125rem; margin-bottom: 2rem;">
        Ready to explore how AI can transform your business?
      </p>
      <a href={`${base}contact`} class="btn btn-primary btn-large" style="background-color: white; color: #1e3a8a;">
        Get in Touch
      </a>
    </div>
  </section>
</BaseLayout>
